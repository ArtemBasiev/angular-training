
@model bizapps_test.MVC.Models.CategoryViewModel

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="PostViewContainer">
    @using (@Html.BeginForm("CreateUpdateCategoryDo", "Admin", FormMethod.Post))
    {
        <h2 style="margin: 0;">
            Category editing
        </h2> <br/>
        <p style="margin-bottom: 0; padding-bottom: 5px; padding-top: 5px;">
            <b> <label>Category name:</label> </b>
            @Html.EditorFor(category => category.CategoryName)
        </p>
        @Html.ValidationMessageFor(category => category.CategoryName)
        <br/>

        <input type="submit" id="ButtonCreateCategory" value="Save changes category" class="buttonOnWhitePanel"/>

        @Html.HiddenFor(category=>category.Id)
    }
    @using (@Html.BeginForm("DeleteCategory", "Admin", FormMethod.Post))
    {
        @Html.HiddenFor(category=>category.Id)
        <input type="submit" id="ButtonDeleteCategory" value="Delete category" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this Category? You cannot undo this action.')"/>
    }
   
   
    
</div>

